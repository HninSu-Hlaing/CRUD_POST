<div class="container">
    <% if current_user %>
    <div class="row justify-content-center mt-5">
        <p>Logged in as : <%= current_user.email %></p>
        <%= button_to "logout" , logout_path, method: :delete ,class: 'form-control btn-danger ml-3'%>
    </div>
    <% end %>
    <div class="form-group">
        <h3 class="row justify-content-center display-4 mt-4">Register</h3>
        <div class="row justify-content-center mt-5">
        <%= link_to "Sign up",signup_path ,class: 'pr-5' %>
        <%= link_to "Log in",login_path ,class: 'pr-5'%>
        <%= link_to "Post List",post_list_path ,class: 'pr-5'%>
        <%= link_to "User List",user_list_path %>
        </div>
    </div>
</div>

