<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Show details of user <%= @users.id%></h4>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <tbody>
        <tr>
          <th>Name:</th>
          <td><%= @users.username %></td>
        </tr>
        <tr>
          <th>Email:</th>
          <td><%= @users.email %></td>
        </tr>
         <tr>
          <th>Password:</th>
          <td><%= @users.password %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>