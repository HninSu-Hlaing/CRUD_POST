<h4 class="row justify-content-center display-4">Post List</h4>
  <div class="container mt-5">
    <div class="row">
      <div class="col">
        <%= link_to 'Create Post' ,new_post_path %>
        </div>
      <div class="col">
        Download:<%= link_to "CSV File" , post_list_path(format: "csv") %>
    </div>
    <div class="col">
      <%= form_tag import_post_tbles_path ,multipart: true do %>
      <%= file_field_tag :file %><br><br>
      <%= submit_tag "Import CSV File" ,class: 'btn-primary'%>
      <% end %>
    </div>
  </div>
<div class="container mt-3">
  <div class="row justify-content-center">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Status</th>
          <th scope="col">User Id</th>
          <th scope="col" colspan="1">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.description %></td>
            <td><%= post.status %></td>
            <td><%= post.user_id %></td>
            <td><%= link_to 'Delete',
            post_tble_path(post.id),
            method: :delete,
            data: { confirm: 'Are you sure to delete?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "<< Back",root_path %>
</div>