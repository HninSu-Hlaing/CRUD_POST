<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Post</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with scope: :post_tble, url: new_post_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class: 'form-control' %>
      </div>
       <div class="form-group">
        <%= form.label :status %>
        <%= form.number_field :status,value:1,class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center">
    <span class="pr-5 font-weight-bold"><%= link_to "Back",post_list_path %></span>
    <span class="pl-5 font-weight-bold"><%= link_to "Log in",login_path%></span>
  </div>
</div>